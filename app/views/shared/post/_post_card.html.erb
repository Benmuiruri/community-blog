<div class="card text-center">
  <div class="card-header">
    <%= post.title %>
    <p class="card-text"><small class="text-muted">Comments: <%= post.comments_counter %></small></p>
    <p class="card-text"><small class="text-muted">Likes: <%= post.likes_counter %></small></p>
  </div>
  <div class="card-body">
    <p class="card-text"><%= post.text %></p>
    <%= link_to "See Post", user_post_path(post.author, post), class: "btn btn-primary" %>
  </div>
  <div class="card-footer text-muted">
    <%= render partial: "shared/post/comment_card", locals: { post: post, comments: post.last_five_comments} %>
  </div>
</div>