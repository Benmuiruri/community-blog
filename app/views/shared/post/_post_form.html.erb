<%= form_with url: new_user_post_path do |form| %>

  <div class="mb-3">
    <%= form.label :post_title %>
    <%= form.text_field :post_title %>
  </div>

  <div class="mb-3">
    <%= form.label :post %>
    <%= form.text_area :post, size: "70x5" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Create Post", class: "btn btn-primary" %>
  </div>

<% end %>